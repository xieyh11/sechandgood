<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.goods.any? %>
      <h3>Goods (<%= @user.goods.count %>)</h3>
      <ol class="goods">
        <%= render partial: "shared/show_goods", collection: @goods, as: "good" %>
      </ol>
      <%= will_paginate @goods %>
    <% end %>
  </div>
</div>
